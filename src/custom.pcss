.btn{
  @apply flex justify-between items-center h-10 w-40 rounded-[12px] p-3
}
.btn-primary{
  @apply bg-grey-800 text-white hover:bg-grey-900 active:bg-grey-900 focus:bg-grey-900 focus:ring-2 focus:ring-[#4262DF1A] disabled:bg-grey-500;
}

.btn-secondary{
  @apply bg-white text-black ring-2 ring-[#4262DF1A] hover:bg-blue-100 active:bg-blue-100 focus:bg-blue-100 disabled:bg-grey-400;
}

.error{
  @apply bg-red-100 border-red-400
}